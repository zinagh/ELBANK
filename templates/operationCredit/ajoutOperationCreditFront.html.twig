{% extends 'base_front_connecte.html.twig' %}

{% block title %}EL Bank - Inscription{% endblock %}

{% block carousel %}

    <!-- Quote Start -->
    <div class="container-fluid bg-light overflow-hidden my-5 px-lg-0">
        <div class="container quote px-lg-0">
            <div class="row g-0 mx-lg-0">
                <div class="col-lg-6 ps-lg-0" style="min-height: 400px;">
                    <div class="position-relative h-100">
                        <img class="position-absolute img-fluid w-100 h-100" src="{{ asset('FrontOffice/img/bank.jpg') }}" style="object-fit: cover;" alt="">
                    </div>
                </div>
                <div class="col-lg-6 quote-text py-5 wow fadeIn" data-wow-delay="0.5s">
                    {#  <div class="p-lg-5 pe-lg-0">
                            <h1 class="display-5 mb-4">Inscription</h1>
                        </div>#}

                    <div class="p-lg-5 pe-lg-0">
                        <div class="">
                            <h4 class="mb-4 pb-2" style="color: #1c294e">Ajouter une operation</h4>
                        </div>
                        {{ form_start(form , {'attr':{'novalidate':'novalidate'}}) }}
                        <div class="col-md-auto">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Montant a payer</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            {{ form_widget(form.montPayer) }}
                                        </div>
                                        <div style="color: red">
                                            {{ form_errors(form.montPayer) }}
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Date operation</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            {{ form_widget(form.dateOp) }}
                                        </div>
                                        <div style="color: red">
                                            {{ form_errors(form.dateOp) }}
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Type operation</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            {{ form_widget(form.typeOperation) }}
                                        </div>
                                        <div style="color: red">
                                            {{ form_errors(form.typeOperation) }}
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Taux interets</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            {{ form_widget(form.tauxInteret) }}
                                        </div>
                                        <div style="color: red">
                                            {{ form_errors(form.tauxInteret) }}
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Echeance</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            {{ form_widget(form.echeance) }}
                                        </div>
                                        <div style="color: red">
                                            {{ form_errors(form.echeance) }}
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Credit</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            {{ form_widget(form.Credit) }}
                                        </div>
                                        <div style="color: red">
                                            {{ form_errors(form.Credit) }}
                                        </div>
                                    </div>
                                    <div class="row">

                                        <div class="col-sm-9 text-secondary" style="visibility:hidden ">
                                            {{ form_widget(form.solvabilite) }}
                                        </div>
                                        <div style="color: red;visibility:hidden ">
                                            {{ form_errors(form.solvabilite) }}
                                        </div>
                                    </div>




                                </div>


                            </div>
                        </div>

                        {{ form_end(form) }}



                    </div>

                </div>
            </div>
        </div>
    </div>
    </div>
    <!-- Quote End -->

{% endblock %}