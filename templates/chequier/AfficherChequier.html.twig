{% extends 'base_front_connecte.html.twig' %}

{% block title %}EL Bank - Chequier{% endblock %}

{% block carousel %}

    <div class="container-xxl py-5">
        <div class="container">
            <div class="section-title text-center">
            </div>
            <div class="row g-4">
                {% for c in chequiers %}
                    {% if c.etatchequier == 1 %}
                        <div class="col-md-6 col-lg-4 wow fadeInUp" data-wow-delay="0.1s">
                            <div class="service-item">
                                <div class="overflow-hidden">
                                    <img class="img-fluid" src="{{ asset('FrontOffice/img/img.png') }}" alt="">
                                </div>
                                <div class="p-4 text-center border border-5 border-light border-top-0">
                                    <a class="fw-medium" >{{ c.motifchequier }}<i class="fa fa-arrow-right ms-2" ></i></a>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}