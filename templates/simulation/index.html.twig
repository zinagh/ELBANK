            <script type="text/javascript">
                const creditChecker = (monton, dure, salaire) => {
                    const calc = (monton / (dure* 12))
                    if (calc <= (salaire / 2)) {
                        return 'Vous pouvez avoir le credit';
                    }
                    else
                        return 'Vous ne pouvez pas avoir le credit';
                }

                const submitFn = () => {
                    let monton = document.getElementById('MONTON').value;
                    let dure = document.getElementById('Dure').value;
                    let salaire = document.getElementById('Salaire').value;
                    let type = document.getElementById('Type').value;
                    const msg = creditChecker(monton, dure, salaire);

                    if (!monton || !dure || !salaire || !type) {
                        return;
                    }

                    document.getElementById('cardContent').innerHTML = msg
                    document.getElementById('cardContent').className = 'personalCard';
                }

