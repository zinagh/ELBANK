<!-- Recent Activity
                    =============================== -->
<div class="bg-white shadow-sm rounded py-4 mb-4">
    <h3 class="text-5 fw-400 d-flex align-items-center px-4 mb-4">Activité récente</h3>

    <!-- Title
    =============================== -->
    <div class="transaction-title py-2 px-4">
        <div class="row fw-00" style="font-weight: bold">
            <div class="col-2 col-sm-1 text-center"><span class="">Date</span></div>
            <div class="col col-sm-7">Description</div>
            <div class="col-auto col-sm-2 d-none d-sm-block text-center">Etat</div>
            <div class="col-3 col-sm-2 text-end">Montant</div>
        </div>
    </div>
    <!-- Title End -->

    <!-- Transaction List
    =============================== -->

    <div class="transaction-list">
        {% for trans in transactions %}

            <div class="transaction-item px-4 py-3" data-bs-toggle="modal"
                 data-bs-target="#transaction-detail">

                <div class="row align-items-center flex-row">
                    <div class="col-2 col-sm-1 text-center"><span
                                class="d-block text-4 fw-300">{{ trans.datetransaction |date('d-m') }}</span> <span
                                class="d-block text-1 fw-300 text-uppercase">{{ trans.datetransaction |date('Y') }}</span>
                    </div>
                    <div class="col col-sm-7"><span class="d-block text-4">{{ trans.fullnamerecepteur }}</span> <span
                                class="text-muted">{{ trans.descriptiontransaction }}</span></div>
                    {% if trans.etattransaction == 0 %}
                        <div class="col-auto col-sm-2 d-none d-sm-block text-center text-3"><span
                                    class="text-warning" data-bs-toggle="tooltip" title="En cours"><i
                                        class="fas fa-ellipsis-h"></i></span></div>

                    {% elseif trans.etattransaction == 1 %}
                        <div class="col-auto col-sm-2 d-none d-sm-block text-center text-3"><span
                                    class="text-success" data-bs-toggle="tooltip" title="Aboutie"><i
                                        class="fas fa-check-circle"></i></span></div>

                    {% elseif trans.etattransaction == 2 %}
                        <div class="col-auto col-sm-2 d-none d-sm-block text-center text-3"><span
                                    class="text-danger" data-bs-toggle="tooltip" title="Annulée"><i
                                        class="fas fa-times-circle"></i></span></div>

                    {% endif %}
                    <div class="col-3 col-sm-2 text-end text-4"><span
                                class="text-nowrap">{{ trans.montanttransaction }}</span>
                        <span class="text-2 text-uppercase">DT </span></div>
                </div>
            </div>
        {% endfor %}
    </div>
    <!-- Transaction List End -->

    <!-- Transaction Item Details Modal
    =========================================== -->
    <div id="transaction-detail" class="modal fade" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered transaction-details" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="row g-0">
                        <div class="col-sm-5 d-flex justify-content-center bg-primary rounded-start py-4">
