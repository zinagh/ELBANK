{% extends 'base_back.html.twig' %}

{% block title %}EL Bank - Cheque{% endblock %}

{% block body %}

    {% if Message =="" %}
        {{ Message }}
    {% endif %}

    <div class="container">
        <div class="row">
            <div class="col-sm-12 text-center breadcrumbs_inner">
                <table class="table" border="1" style="color:#22242a ;border: #a7a7a7">
                    <h4><i class="fa fa-angle-right"></i> La liste des chéques</h4>
                    <hr>
                    <thead>
                    <tr>
                        <th>Montant</th>
                        <th>Date d'encaissement  <a href="{{ path('croissantcheque') }}"><img src="{{ asset('img.png') }}" height="20" width="20"> </a>

                            <a href="{{ path('decroissantcheque') }}"><img src="{{ asset('img_1.png') }}" height="20" width="20"> </a>
                        </th>
                        <th>Lieu</th>
                        <th>Destinataire</th>
                        <th>Balance Destinataire</th>
                        <th>Balance Proprietaire</th>
                        <th>Date de création</th>
                        <th>Modifier</th>
                        <th>Supprimer</th>
                        <th>Encaisser</th>
                    </tr>
                    </thead>
                    <tbody>

                    <tr>
                        {% for U in c%}
                    <tr>

                        <td>
                            {{ U.montant }}
                        </td>

                        <td>
                            {{ U.datecheque |date('d/m/Y')}}
                        </td>
                        <td>
                            {{ U.lieu }}
                        </td>

                        <td>
                            {{ U.destinataire.fullnameclient.nomu }}{{ ' ' }}{{ U.destinataire.fullnameclient.prenomu }}
                        </td>
                        <td>
                            {{ U.destinataire.soldecompte }}
                        </td>
                        <td>
                            {{ U.proprietaire.soldecompte }}
                        </td>
                        <td>
                            {{ U.createdAt|date("m/d/Y") }}
                        </td>



                        <td>


                            <a href="{{ path('ModifierE',{'id':U.id}) }}">
                                <img src="{{ asset('update2.png') }}"  style="width:42px;height:42px;border:0">
                            </a>

                        </td>
                        <td> <a href="{{ path('supprimerCheque',{'id':U.id}) }}">
                                <img src="{{ asset('delete2.png') }}"  style="width:42px;height:42px;border:0">
                            </a>
                        </td>
                        <td>


                            <a href="{{ path('encaissement',{'id':U.id}) }}">
                                <img src="{{ asset('img_1.png') }}"  style="width:42px;height:42px;border:0">
                            </a>

                        </td>



                    </tr>
                    {% endfor %}


                    </tbody>
                </table>
            </div>
            <!-- /content-panel -->
        </div>
        <!-- /col-md-12 -->
    </div>
{% endblock %}